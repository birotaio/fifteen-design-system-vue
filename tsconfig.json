{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@/*": ["./*"],
      "react": ["./stubs/types__react"]
    },
    "outDir": "dist",
    "declaration": true
  },
  "exclude": ["./dist/**/*"],
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
