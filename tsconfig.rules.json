{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "dist/types/rules",
    "declaration": false,
    "paths": {
      "@@/*": ["./*"],
      "@/*": ["./src/*"],
      "react": ["./stubs/types__react"]
    }
  },
  "include": ["src/rules/index.ts"]
}
