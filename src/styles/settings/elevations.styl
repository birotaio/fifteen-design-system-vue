/**
 * Elevations
 */

$elevation-duration = 0.28s

//light
$shadow-umbra-shade-light-1 := rgba(44, 50, 59, 0.04)
$shadow-umbra-shade-light-2 := rgba(44, 50, 59, 0.08)

$shadow-penumbra-shade-light-1 := rgba(97, 102, 108, 0.16)
$shadow-penumbra-shade-light-2 := rgba(97, 102, 108, 0.16)
$shadow-penumbra-shade-light-3 := rgba(97, 102, 108, 0.24)
$shadow-penumbra-shade-light-4 := rgba(97, 102, 108, 0.28)

$shadow-inset-light := inset 0 0 4px 0 $shadow-penumbra-shade-light-4

$shadow-umbra-light := 0 0   1px 0 $shadow-umbra-shade-light-2,
                       0 0   1px 0 $shadow-umbra-shade-light-1,
                       0 0   2px 0 $shadow-umbra-shade-light-1,
                       0 2px 4px 0 $shadow-umbra-shade-light-1,
                       0 2px 8px 0 $shadow-umbra-shade-light-1,
                       0 2px 8px 0 $shadow-umbra-shade-light-2

$shadow-penumbra-light := 0 1px  2px  0 $shadow-penumbra-shade-light-1,
                          0 2px  4px  0 $shadow-penumbra-shade-light-1,
                          0 4px  8px  0 $shadow-penumbra-shade-light-1,
                          0 8px  14px 0 $shadow-penumbra-shade-light-1,
                          0 16px 24px 0 $shadow-penumbra-shade-light-2,
                          0 20px 32px 0 $shadow-penumbra-shade-light-3

// dark
$shadow-umbra-shade-dark-1 := rgba(0, 0, 0, 0.04)
$shadow-umbra-shade-dark-2 := rgba(0, 0, 0, 0.08)

$shadow-penumbra-shade-dark-1 := rgba(0, 0, 0, 0.32)
$shadow-penumbra-shade-dark-2 := rgba(0, 0, 0, 0.40)

$shadow-inset-dark := inset 0 0 4px 0 $shadow-penumbra-shade-dark-1

$shadow-umbra-dark := 0 0   1px 0 $shadow-umbra-shade-dark-1,
                      0 0   1px 0 $shadow-umbra-shade-dark-1,
                      0 0   2px 0 $shadow-umbra-shade-dark-1,
                      0 2px 4px 0 $shadow-umbra-shade-dark-1,
                      0 2px 8px 0 $shadow-umbra-shade-dark-1,
                      0 2px 8px 0 $shadow-umbra-shade-dark-2

$shadow-penumbra-dark := 0 1px  2px  0 $shadow-penumbra-shade-dark-1,
                         0 2px  4px  0 $shadow-penumbra-shade-dark-1,
                         0 4px  8px  0 $shadow-penumbra-shade-dark-1,
                         0 8px  16px 0 $shadow-penumbra-shade-dark-1,
                         0 16px 24px 0 $shadow-penumbra-shade-dark-1,
                         0 20px 32px 0 $shadow-penumbra-shade-dark-2

/**
 * colors
 */

$red-shift := -2, 0, 2, 4, 5, 7, 8, 10
$green-shift := -2, 0, 2, 4, 5, 7, 9, 10
$blue-shift := -2, 0, 3, 5, 8, 10, 13, 16
